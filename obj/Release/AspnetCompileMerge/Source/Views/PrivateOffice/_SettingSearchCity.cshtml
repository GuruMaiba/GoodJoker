@model ICollection<GoodJoker.Models.City>

@if (Model.Count > 0)
{
    foreach (var city in Model)
    {
        <div class="cityItem" cityId="@city.Id">
            <div class="reg">@city.Region.Name</div>
            <div class="info"><span class="name">@city.Name</span> - @city.Index</div>
        </div>
    }
}

@if (Model.Count < 3)
{
    <div class="cityItem addCity" cityId="1">
        Добавить населенный пункт
    </div>
}

