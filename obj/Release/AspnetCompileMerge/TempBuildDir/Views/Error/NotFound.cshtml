
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Страница не найдена</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="stylesheet" href="~/Content/style/Site.css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Exo+2:400,900italic,900" />
    <style>
        html {
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="notFound">
        <ul id="scene" data-clipRelativeInput="true" data-relativeInput="true">
            <li class="layer" data-depth="0.00"><img class="img-responsive" src="~/Content/style/images/carBG.png"></li>
            <li class="layer" data-depth="0.03"><img class="img-responsive" src="~/Content/style/images/carRed.png"></li>
            <li class="layer" data-depth="0.10">
                <div class="ad">
                    <h1>404</h1>
                    <div class="textContainer">
                        <p>Сейчас, мы не нашли эту страницу! <br /> Возможно в будущем, она появится...</p>
                        <a href="/" class="back">Назад в будущее</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</body>
</html>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/ThirdParty")
<script>
    var scene = document.getElementById('scene');
    var parallax = new Parallax(scene);
    //if (device.mobile()) {
